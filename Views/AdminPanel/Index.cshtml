@using PraktikaProject.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a style="margin-top: 10px" class="btn btn-primary" href="/AdminPanel/addUser" role="button">Add new user</a>
<a style="margin-top: 10px" class="btn btn-primary" href="/AdminPanel/addTask" role="button">Add new task</a>
<p style="text-align:center">All users</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Username</th>
        </tr>
    </thead>
    @foreach (User user in (List<User>)ViewData["usersDataVD"])
    {
        <tbody>
            <tr>
                <td>@user.username</td>
                <td>
                    <a href="/AdminPanel/EditUser?id=@user.userID" style="float:left;margin-right:10px;">Edit User</a>
                    <a href="/AdminPanel/DeleteUser?id=@user.userID" style="float:left;margin-right:10px;">Delete User</a>
                </td>
            </tr>
        </tbody>
    }
</table>
<p style="text-align:center">All tasks</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Task Description</th>
        </tr>
    </thead>
    @foreach (Task task in (List<Task>)ViewData["tasksList"])
    {
        <tbody>
            <tr>
                <td>@task.TaskDescr</td>
                <td>
                    <a href="/AdminPanel/EditTask?id=@task.TaskId" style="float:left; margin-right:10px;">Edit Task</a>
                    <a href="/AdminPanel/DeleteTask?id=@task.TaskId" style="float:left; margin-right:10px;">Delete Task</a>
                </td>
            </tr>
        </tbody>
    }
</table>


