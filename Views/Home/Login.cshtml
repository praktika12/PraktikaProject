@model PraktikaProject.Models.User
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container" style="margin-top:130px">
        <form class="form-horizontal" role="form" method="POST" action="/Home/Login">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2 style="text-align:center">Login</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group has-danger">
                        <label class="sr-only" for="email">E-Mail Address</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                            <input type="text" value="" name="username" class="form-control" id="username"
                                   placeholder="Username" autofocus>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                            <input type="password" value="" name="password" class="form-control" id="password"
                                   placeholder="Password">
                        </div>
                    </div>
                    <span class="text-danger align-middle">
                        @Html.DisplayFor(model => model.LoginErrorMessage)
                    </span>
                   
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success" value="Login"><i class="fa fa-sign-in"></i> Login</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
